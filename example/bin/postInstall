#!/bin/bash
# This script creates a bunch of symlinks so you can import this library in the examples you create

mkdir -p ../node_modules
ln -sfn ../example/node_modules/react/ ../node_modules/react
ln -sfn ../example/node_modules/@sanity/ ../node_modules/@sanity
ln -sfn ../example/node_modules/@kaliber/ ../node_modules/@kaliber
ln -sfn ../../../ ./node_modules/@kaliber/sanity-image
